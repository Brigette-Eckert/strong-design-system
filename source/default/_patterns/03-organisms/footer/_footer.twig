{#
/**
 * @file
 * footer
 *
 * Available variables for footer:
 *    - footer.variable_name [variable_type]: Description of the variable. Example below.
 *    - footer.slogan [String]: Site footer slogan seen on most pages.
 */
#}

<footer class="footer container">
  <div class="row text-center">
    <div class="col">
      {{ footer.headline }} <strong> {{ footer.emphasis }}</strong>
    </div>
  </div>



  <div class="row">
    <div class="col-sm-6">
      <form class="footer__form">
        <div class="form-row">
          <div class="col">
            <input type="text" class="form-control" placeholder="{{ footer.form.name }}">
          </div>
          <div class="col">
            <input type="text" class="form-control" placeholder="{{ footer.form.email }}">
          </div>
        </div>

        <div class="form-group">
          <label for="messageTextArea">{{ footer.form.message }}</label>
          <textarea class="form-control" id="messageTextArea" rows="5"></textarea>
        </div>

        {% include '@atoms/_icon-button.twig' with {
          icon_button: footer.button
        } %}
      </form>
    </div>

    <div class="col-sm-6">
      <p>{{ footer.summary }} </p>

      {% for link in footer.links %}

        <span class="header__btn-wrapper">
          <button type="button" class="header__btn btn btn-dark">
          <i class="header__svg fa{{ link.icon_type }} fa-{{ link.icon }}" aria-hidden="true"></i>
        </button>
       <span class="header__btn-text">
         {{ link.text }}
       </span>
        </span>
      {% endfor %}

    </div>
  </div>


  <hr>
  <ul>
    {% for credit in footer.credits  %}
      <li>
        {{  credit.credit }}
      </li>
    {% endfor %}
  </ul>
</footer>
