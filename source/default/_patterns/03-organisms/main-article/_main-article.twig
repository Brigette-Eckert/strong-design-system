{#
/**
 * @file
 * main-article
 *
 * Available variables for main-article:
 *    - main_article.variable_name [variable_type]: Description of the variable. Example below.
 *    - main_article.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}

<div class="main-article container">

  <div class="row">
    <div class="col">
      <h2 class="main-article__header">
        <div class="main-article__header--headline">
          {{ main_article.headline }}
        </div>
        <div class="main-article__header--subline">
          {{ main_article.subline }}
        </div>
      </h2>
    </div>
  </div>

  <div class="main-article__image-wrapper">
    <a class="main-article__image-link" href="#">
      {% include '@atoms/image/_image.twig' with {
        imageStyleName: main_article.imageStyleName|default('medium'),
        img: main_article.img,
        class: 'main-article-card__img'
      } %}
    </a>
  </div>


  {% for section in main_article.sections %}
    <div class="main-article__text-wrapper">
      <h3 class="main-article__title">{{ section.title }}</h3>
      <p class="main-article__summary">{{ section.summary }}</p>
    </div>
  {% endfor %}


  {% include '@atoms/_icon-button.twig' with {
    icon_button: main_article.button
  } %}

</div> <!-- /.main-article -->

