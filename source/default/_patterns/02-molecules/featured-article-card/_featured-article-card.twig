<div class="featured-article-card">
  <div class="featured-article-card__wrapper">
    <div class="featured-article-card__image-wrapper">
      <a class="featured-article-card__image-link" href="#">
        {% include '@atoms/image/_image.twig' with {
          imageStyleName: 'card',
          img: card_image,
          class: "featuered-article-card__img"
        } %}

      </a>
    </div>

    <div class="featured-article-card__text-wrapper text-center">
      <h3 class="featured-article-card__title">{{ featured_article_card.title }}</h3>
      <p class="featured-article-card__summary">{{ featured_article_card.summary }}</p>

    </div>
  </div>
</div>
