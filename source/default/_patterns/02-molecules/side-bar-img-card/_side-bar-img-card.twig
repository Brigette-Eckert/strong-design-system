{#
/**
 * @file
 * side-bar-img-card
 *
 * Available variables for side-bar-img-card:
 *    - side_bar_img_card.variable_name [variable_type]: Description of the variable. Example below.
 *    - side_bar_img_card.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}

<div class="side-bar-img-card container">
  <div class="row">
    <div class="col-sm-4">
      <h3 class="side-bar-img-card__title">{{ side_bar_img_card.title }}</h3>
      <div class="side-bar-img-card__image-text-wrapper">
          <a class="side-bar-img-card__image-link" href="#">
            {% include '@atoms/image/_image.twig' with {
              imageStyleName: 'thumbnail',
              img: card_image,
              class: "side-bar-img-card__img"
            } %}
          </a>
        <p class="side-bar-img-card__summary">{{ side_bar_img_card.summary }}</p>
      </div>
      {% include '@atoms/_icon-button.twig' with {
        icon_button: side_bar_img_card.button
      } %}
    </div>
  </div>

</div>
