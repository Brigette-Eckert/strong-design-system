{#
/**
 * @file
 * icon-button
 *
 * Available variables for icon-button:
 *    - icon_button.variable_name [variable_type]: Description of the variable. Example below.
 *    - icon_button.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}

<div class="icon-button">
  <div class="row">
    <div class="col">
      <button type="button" class="icon-button__btn--{{ icon_button.type }} btn btn-{{ icon_button.color }}">
        <i class="fas fa-{{ icon_button.icon }}" aria-hidden="true"></i>
        {{ icon_button.text | upper }}
        <span></span>
      </button>
    </div>
  </div>
</div>


